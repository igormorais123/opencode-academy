// Schema do banco de dados - OpenCode Academy
// Prof. Igor Morais Vasconcelos - INTEIA

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Usuario do sistema
model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  emailVerified      DateTime?
  name               String?
  image              String?
  role               String    @default("BETA_USER") // ADMIN, BETA_USER, FREE, PREMIUM
  subscriptionStatus String    @default("NONE") // NONE, ACTIVE, CANCELLED, EXPIRED
  subscriptionEnd    DateTime?
  preferredOs        String    @default("windows") // windows, mac
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Relacoes
  accounts        Account[]
  sessions        Session[]
  progress        Progress?
  certificates    Certificate[]
  coachMessages   CoachMessage[]
  loginLogs       LoginLog[]
  purchases       Purchase[]       // Compras de cursos
  courseProgresses CourseProgress[] // Progresso em cursos
}

// NextAuth - Conta OAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth - Sessao
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth - Token de verificacao
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Progresso do usuario no curso
model Progress {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentModule    Int      @default(0)
  currentLesson    Int      @default(0)
  currentStep      Int      @default(1)
  completedSteps   String   @default("[]") // JSON array
  completedLessons String   @default("[]") // JSON array
  completedModules String   @default("[]") // JSON array
  badges           String   @default("[]") // JSON array
  quizScores       String   @default("{}") // JSON object
  totalTimeMinutes Int      @default(0)
  errorsEncountered String  @default("[]") // JSON array
  lastActivityAt   DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Certificado de conclusao
model Certificate {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type       String   // "completo" ou "modulo-X"
  userName   String
  issuedAt   DateTime @default(now())
  verifyCode String   @unique @default(cuid())
}

// Mensagens do Coach IA
model CoachMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String   // "user" ou "assistant"
  content   String
  module    Int?
  lesson    String?
  error     String?
  createdAt DateTime @default(now())
}

// Log de logins (para Google Sheets)
model LoginLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  name      String?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

// ========================================
// MODELOS MULTI-CURSOS
// ========================================

// Curso
model Course {
  id          String   @id @default(cuid())
  slug        String   @unique // URL amigavel: "opencode-academy"
  title       String
  description String
  price       Int      @default(0) // Preco em centavos (R$ 97,00 = 9700)
  thumbnail   String?  // URL da imagem de capa
  published   Boolean  @default(false)
  featured    Boolean  @default(false) // Destacar no catalogo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacoes
  modules    CourseModule[]
  purchases  Purchase[]
  progresses CourseProgress[]
}

// Modulo do curso
model CourseModule {
  id          String   @id @default(cuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title       String
  description String
  duration    String   // Ex: "5-7 min"
  badge       String   // Ex: "Visionario"
  badgeIcon   String   // Ex: "üëÅÔ∏è"
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacoes
  lessons Lesson[]

  @@index([courseId])
}

// Licao do modulo
model Lesson {
  id        String       @id @default(cuid())
  moduleId  String
  module    CourseModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  title     String
  order     Int          @default(0)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relacoes
  steps Step[]

  @@index([moduleId])
}

// Passo da licao
model Step {
  id          String   @id @default(cuid())
  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  type        String   // text, code, tip, warning, theory, image, checker, quiz
  content     String   @db.Text // Conteudo principal (markdown)
  codeContent String?  @db.Text // Codigo para tipo "code"
  options     String?  @db.Text // JSON para quiz: [{ label, correct? }]
  osSpecific  String?  // windows, mac, both, null
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([lessonId])
}

// Compra de curso
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId        String
  course          Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  stripePaymentId String?  @unique
  stripeSessionId String?
  amount          Int      // Valor pago em centavos
  status          String   @default("pending") // pending, completed, refunded, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

// Progresso do usuario em um curso especifico
model CourseProgress {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId         String
  course           Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  currentModuleId  String?  // ID do modulo atual
  currentLessonId  String?  // ID da licao atual
  currentStepId    String?  // ID do step atual
  completedSteps   String   @default("[]") // JSON array de IDs
  completedLessons String   @default("[]") // JSON array de IDs
  completedModules String   @default("[]") // JSON array de IDs
  badges           String   @default("[]") // JSON array
  quizScores       String   @default("{}") // JSON object
  totalTimeMinutes Int      @default(0)
  lastActivityAt   DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

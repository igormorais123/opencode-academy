generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Usuario do sistema
model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  emailVerified      DateTime?
  name               String?
  image              String?
  role               String    @default("BETA_USER") // ADMIN, BETA_USER, FREE, PREMIUM
  subscriptionStatus String    @default("NONE") // NONE, ACTIVE, CANCELLED, EXPIRED
  subscriptionEnd    DateTime?
  preferredOs        String    @default("windows") // windows, mac
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Relacoes
  accounts      Account[]
  sessions      Session[]
  progress      Progress?
  certificates  Certificate[]
  coachMessages CoachMessage[]
  loginLogs     LoginLog[]
}

// NextAuth - Conta OAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth - Sessao
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth - Token de verificacao
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Progresso do usuario no curso
model Progress {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentModule    Int      @default(0)
  currentLesson    Int      @default(0)
  currentStep      Int      @default(1)
  completedSteps   String   @default("[]") // JSON array
  completedLessons String   @default("[]") // JSON array
  completedModules String   @default("[]") // JSON array
  badges           String   @default("[]") // JSON array
  quizScores       String   @default("{}") // JSON object
  totalTimeMinutes Int      @default(0)
  errorsEncountered String  @default("[]") // JSON array
  lastActivityAt   DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Certificado de conclusao
model Certificate {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type       String   // "completo" ou "modulo-X"
  userName   String
  issuedAt   DateTime @default(now())
  verifyCode String   @unique @default(cuid())
}

// Mensagens do Coach IA
model CoachMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String   // "user" ou "assistant"
  content   String
  module    Int?
  lesson    String?
  error     String?
  createdAt DateTime @default(now())
}

// Log de logins (para Google Sheets)
model LoginLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  name      String?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}
